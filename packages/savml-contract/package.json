{
  "name": "savml-contract",
  "version": "0.0.1",
  "description": "the contract for savml",
  "main": "index.js",
  "scripts": {
    "t": "npm run lint && npm run build && npm run test",
    "lint": "standard src/** test/**",
    "build": "rollup -c script/build.js",
    "test": "nyc ava-ts"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ],
    "ignore": [
      "script",
      "dist",
      "fixtures"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "node_modules/tdash/src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "exclude": [
      "node_modules",
      "test",
      "**/*.d.ts"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "include": [
      "src/**/*.ts",
      "node_modules/tdash/src/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/node": "^10.12.2",
    "@types/node-fetch": "^2.1.2",
    "@types/yaml": "^1.0.0",
    "ava": "^1.2.1",
    "ava-ts": "^0.25.2",
    "chai": "^4.2.0",
    "node-fetch": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "standard": "^12.0.1",
    "tdash": "^1.0.6",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333",
    "yaml": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savml/savml.git"
  },
  "author": "jetiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/savml/savml/issues"
  },
  "homepage": "https://github.com/savml/savml#readme"
}
